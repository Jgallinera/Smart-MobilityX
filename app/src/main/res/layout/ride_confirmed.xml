<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".RideConfirmed">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Ride Confirmed!"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Description TextView -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for choosing Smart MobilityX!"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"/>

    <!-- Description TextView -->
    <TextView
        android:id="@+id/descriptionTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Smart. Move Freely."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"/>

    <!-- ImageView for Ride Confirmed -->
    <ImageView
        android:id="@+id/rideConfirmedImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rideconfirmed"
        app:layout_constraintTop_toBottomOf="@id/descriptionTextView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- Start Ride Button -->
    <Button
        android:id="@+id/startRideButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Start Ride"
        android:drawableEnd="@drawable/ic_startride"
        android:drawablePadding="12dp"
        android:textSize="16sp"
        android:backgroundTint="#227442"
        android:fontFamily="@font/poppins"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/rideConfirmedImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>