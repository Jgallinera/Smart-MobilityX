<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:text="Selected Location"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/availableEBicyclesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins"
        android:text="Available E-Bicycles: 0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/availableEScootersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:text="Available E-Scooters: 0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectVehicleButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#227442"
        android:fontFamily="@font/poppins"
        android:padding="14dp"
        android:text="Select Vehicle"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:cornerRadius="8dp"
        android:layout_gravity="center"/>

</LinearLayout>